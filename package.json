{
  "name": "lit-ui-library",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "./dist/lit-ui-library.cjs.js",
  "module": "./dist/lit-ui-library.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/lit-ui-library.es.js",
      "require": "./dist/lit-ui-library.cjs.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "timeout 60s web-test-runner || true",
    "test:watch": "web-test-runner --watch"
  },
  "devDependencies": {
    "@open-wc/eslint-config": "^13.0.0",
    "@open-wc/testing": "^4.0.0",
    "@storybook/web-components": "^7.0.0",
    "@storybook/web-components-vite": "^9.1.3",
    "@types/node": "^20.0.0",
    "@web/dev-server-esbuild": "^1.0.4",
    "@web/test-runner": "^0.18.0",
    "@web/test-runner-chrome": "^0.18.1",
    "eslint": "^9.34.0",
    "eslint-plugin-lit": "^2.1.1",
    "terser": "^5.43.1",
    "typescript": "~5.8.3",
    "vite": "^7.1.2"
  },
  "dependencies": {
    "lit": "^3.3.1"
  }
}
